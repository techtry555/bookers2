<!-- User infoを押した後の遷移先ページ -->
<h2>User info</h2>

<!--form_withの部分 -->
<% form_with @---, do %>

  <label>Name</label>
  <%= f.text_field :user_name %>
  
  <label>Image</label>
  <%= f.file_field :image, accept: "image/*" %>
  
  <label>Introduction</label>
  <%= f.text_area :user_introduction %>
  
  <%= f.submit 'Update User' %>

<% end %>
